<%= @insamling.about %>
<%= @insamling.description %>
<%= simple_form_for [@insamling, @insamling.needs.build] do |f| %>
  <%= f.input :title %>
  <%= f.input :description, type: :text %>
  <%= hidden_field_tag :admin_token, @insamling.admin_token %>
  <%= f.submit "Lägg till behov" %>
<% end %>

<ul>
  <% @insamling.needs.each do |need| -%>
    <% if not need.new_record? %>
      <li>
        <div>
          <%= need.title %>
        </div>
        <div>
          <%= need.description %>
        </div>

          <%= link_to "Ta bort behov",
            insamling_need_path(
              @insamling, 
              need, 
              admin_token: @insamling.admin_token
            ),
            :confirm => "Är du säker?",
            :method => :delete %>
      </li>
    <% end %>
<% end -%>
